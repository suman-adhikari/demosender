
@using VasupDemoServerInfrastructure

@if (Session[SessionVariables.ConfirmationStatus] != null)
{
    if (Convert.ToString(Session[SessionVariables.ConfirmationStatus]) == "Failed")
    {
        <div class="alert alert-error alert-dismissible" role="alert">
            <button type='button' class='close' data-dismiss='alert' aria-label=''><span aria-hidden='true' style='color: red;'> x </span></button>
            <span style="display: inline-block; position: relative; top: 7px;"><img src="~/includes/images/error.png" /></span>
            <span>@Convert.ToString(Session[SessionVariables.ConfirmationMessage])</span>
        </div>
    }
    else
    {
        <div class="alert alert-success alert-dismissible" role="alert">
            <button type='button' class='close' data-dismiss='alert' aria-label=''><span aria-hidden='true' style='color:green;'> x </span></button>
            <span style="display: inline-block; position: relative; top: 7px;"><img src="~/includes/images/success.png" /></span>
            <span style="display: inline-block">@Convert.ToString(Session[SessionVariables.ConfirmationMessage])</span>
        </div>

    }

    Session[SessionVariables.ConfirmationStatus] = null;
    Session[SessionVariables.ConfirmationMessage] = null;
}






